{% if opponent.isAi %}
{% trans "%ai_name% level %ai_level%" with ['%ai_name%': 'Crafty A.I.', '%ai_level%': opponent.aiLevel] %}
{% else %}
<span title="{% trans "Human opponent " ~ isOpponentConnected ? "connected" : "offline" %}" class="username {{ isOpponentConnected ? "connected" : "offline" }}">
    {% trans opponent.color|capitalize %} - {{ opponent.username }}
</span>
{% endif %}
