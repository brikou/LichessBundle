{% if pager.pageCount %}
    {% if pager.first and pager.first != pager.current %}
        <a class="first" href="{{ url }}?page={{ pager.first }}">First</a>
    {% else %}
        <span class="first">First</span>
    {% endif %} |
    {% if pager.previous %}
        <a class="previous" href="{{ url }}?page={{ pager.previous }}">Prev</a>
    {% else %}
        <span class="previous">Previous</span>
    {% endif %} |
    {% for page in pager.pagesInRange %}
        {% if page == pager.current %}
            <span class="current">{{ page }}</span>
        {% else %}
            <a href="{{ url }}?page={{ page }}">{{ page }}</a>
        {% endif %} |
    {% endfor %}
    {% if pager.next %}
        <a class="next" href="{{ url }}?page={{ pager.next }}">Next</a>
    {% else %}
        <span class="next">Next</span>
    {% endif %}
{% endif %}
