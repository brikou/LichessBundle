    xsi:schemaLocation="http://www.symfony-project.org/schema/dic/services http://www.symfony-project.org/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="lichess.security.helper.class">Bundle\LichessBundle\Security\SecurityHelper</parameter>
    </parameters>

    <services>

        <service id="lichess.security.helper" class="%lichess.security.helper.class%" shared="false">
