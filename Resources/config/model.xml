<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <parameter key="lichess.model.game.class">Bundle\LichessBundle\Document\Game</parameter>
        <parameter key="lichess.model.seek.class">Bundle\LichessBundle\Document\Seek</parameter>
        <parameter key="lichess.model.translation.class">Bundle\LichessBundle\Document\Translation</parameter>

    </parameters>

    <services>

        <service id="lichess.object_manager" alias="doctrine.odm.mongodb.document_manager" />

        <service id="lichess.repository.game" class="Bundle\LichessBundle\Document\GameRepository" factory-service="forum.object_manager" factory-method="getRepository">
            <argument type="string">%lichess.model.game.class%</argument>
        </service>

        <service id="lichess.repository.seek" class="Bundle\LichessBundle\Document\SeekRepository" factory-service="forum.object_manager" factory-method="getRepository">
            <argument type="string">%lichess.model.seek.class%</argument>
        </service>

        <service id="lichess.repository.translation" class="Bundle\LichessBundle\Document\TranslationRepository" factory-service="forum.object_manager" factory-method="getRepository">
            <argument type="string">%lichess.model.translation.class%</argument>
        </service>

    </services>

</container>
